			<div class="n"><%= title %></div>
		</div>
		<div class="o">
			<div class="e">
				<div class="c">
					<div class="content"><%= yield %></div>
				</div>
			</div>
		</div>
		<div>
			<div class="so">
				<div class="se">
					<div class="s"></div>
				</div>
			</div>
