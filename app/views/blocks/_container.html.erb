	<%= javascript_include_tag 'ui.core.min' %>
	<%= javascript_include_tag 'ui.resizable.min' %>
	<%= javascript_include_tag 'ui.draggable.min' %>
	
	<%= stylesheet_link_tag 'mbContainer' %>

