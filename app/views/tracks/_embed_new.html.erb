	<script>
		$(document).ready(function(){
			$.spin.imageBasePath = '/images/spin1/';
			
			$('#track_timeh').spin({
				max: 2,
				min: 0
			});
			$('#track_timem').spin({
				max: 59,
				min: 0
			});
			$('#track_times').spin({
				max: 59,
				min: 0
			});
		});
	</script>

<% end %>

